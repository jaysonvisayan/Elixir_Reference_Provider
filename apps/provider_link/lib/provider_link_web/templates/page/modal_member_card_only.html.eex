  <% end %>
  <div class="content">
    <div class="fs-20 bold mb-2 text-center">Member Card</div>
    <div style="background: #2A79FF;color: #FFFFFF;border-radius: 4px;padding: 1.5rem;">
    <form class="ui form">
        <p class="member-card-label mt-16">Swipe or Enter 16-digit card no</p>
        <div class="ui input">
          <input style="border-radius: 0px;" class="member-card-number" oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" type="number" maxlength="4" name="acu_cardno1" placeholder="_ _ _ _">
          <input style="border-radius: 0px;" class="member-card-number" oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" type="number" maxlength="4" name="acu_cardno2" placeholder="_ _ _ _">
