          <input style="border-radius: 0px;" class="member-card-number" oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" type="number" maxlength="4" name="acu_cardno4" placeholder="_ _ _ _">
          <input id="card" type="hidden">
        </div>
        <div class="member-card-photo mt-4">
        </div>

        <div class="ui calendar sixteen wide column" id="birthdate_picker_for_card_acu">
          <p class="member-card-label mt-4">Birth Date</p>
          <div class="ui fluid input right icon">
            <i class="calendar icon"></i>
            <input type="text" id="birth_date_for_card" placeholder="Enter member's birthday", name="bdate_for_card">
          </div>
        </div>

        <br />

        </div>
        <br />
      <p role="append"></p>
      <%= if assigns[:paylink_user_id] do %>
      <button type="button" class="ui fluid large primary button" id="acu_card_no_validate_no_session">Enter</button>
        <a href="http://paylinkapiuat.medilink.com.ph/LOA.aspx" class="ui fluid large basic primary button">Back</a>
      <% else %>
        <button type="button" class="ui fluid large primary button" id="acu_card_no_validate">Enter</button>
      <% end %>
    </form>

